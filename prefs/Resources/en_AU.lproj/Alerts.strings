<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE plist PUBLIC "-//Apple//DTD PLIST 1.0//EN" "http://www.apple.com/DTDs/PropertyList-1.0.dtd">
<plist version="1.0">
<dict>
	<!-- Page title. -->
	<key>ALERTS</key>
	<string>Alerts</string>

	<!-- Button for choosing the alert format. -->
	<key>OVERLAY_FORMAT</key>
	<string>Alert Format</string>

	<!-- Options for the alert format. -->
	<key>OVERLAY_FORMAT_NATURAL</key>
	<string>Natural</string>
	<key>OVERLAY_FORMAT_NATURAL_WITH_EXAMPLE</key>
	<string>Natural: Johnny Appleseed is typing</string>
	<key>OVERLAY_FORMAT_TRADITIONAL</key>
	<string>Traditional</string>
	<key>OVERLAY_FORMAT_TRADITIONAL_WITH_EXAMPLE</key>
	<string>Traditional: Typing: Johnny Appleseed</string>
	<key>OVERLAY_FORMAT_NAME_ONLY</key>
	<string>Name Only</string>
	<key>OVERLAY_FORMAT_NAME_ONLY_WITH_EXAMPLE</key>
	<string>Name Only: Johnny Appleseed</string>

	<!-- Header for the animation type segmented control. -->
	<key>ANIMATION_TYPE</key>
	<string>Animation</string>

	<!-- Buttons shown in the segmented control for the animation type. -->
	<key>ANIMATION_SLIDE</key>
	<string>Slide</string>
	<key>ANIMATION_FADE</key>
	<string>Fade</string>

	<!-- Header for the display duration selection. -->
	<key>DISPLAY_DURATION</key>
	<string>Display Duration</string>

	<!-- The label showing how many seconds the user has specified. -->
	<key>ONE_SECOND</key>
	<string>1 Second</string>
	<key>N_SECONDS</key>
	<string>%i Seconds</string>

	<!-- Header for the section shown when libstatusbar isn't installed. -->
	<key>LIBSTATUSBAR_NOT_INSTALLED</key>
	<string>libstatusbar is required to show status bar icons.</string>

	<!-- Button that opens Cydia to the libstatusbar package. -->
	<key>INSTALL_LIBSTATUSBAR</key>
	<string>Install libstatusbar</string>

	<!-- The Typing and Read Receipt headings. -->
	<key>TYPING_HEADER</key>
	<string>Typing</string>
	<key>READ_HEADER</key>
	<string>Read Receipt</string>
	<key>SENDING_FILE_HEADER</key>
	<string>Sending File</string>

	<!-- Buttons shown in the segmented controls for the alert type. -->
	<key>OFF</key>
	<string>Off</string>
	<key>ALERT_TYPE_ICON</key>
	<string>Icon Only</string>
	<key>ALERT_TYPE_OVERLAY</key>
	<string>Status Bar</string>

	<!-- Button for choosing how long the alert shows for. -->
	<key>SHOW_FOR</key>
	<string>Show For</string>

	<!-- Options for "Show For". -->
	<key>SHOW_FOR_SPECIFIED</key>
	<string>My Specified Duration</string>
	<key>SHOW_FOR_TYPING</key>
	<string>Duration of the Typing</string>

	<!-- Explanation shown under the "Show For" list. -->
	<key>SHOW_FOR_EXPLANATION</key>
	<string>To show the alert for the duration specified on the previous page, select “My Specified Duration”. To show the alert for as long as the sender is typing, select “Duration of the Typing”.</string>

	<!-- Switch to allow or disallow alerts showing in Messages. -->
	<key>HIDE_IN_MESSAGES</key>
	<string>Hide in Messages</string>

	<!-- Buttons to test the alerts. -->
	<key>TEST_TYPING</key>
	<string>Test Typing Alert</string>
	<key>TEST_READ_RECEIPT</key>
	<string>Test Read Receipt Alert</string>
	<key>TEST_SENDING_FILE</key>
	<string>Test Sending File Alert</string>

	<!-- Switch to allow or ignore notifications from muted/blocked senders. -->
	<key>IGNORE_DND_SENDERS</key>
	<string>Ignore Muted/Blocked Senders</string>

	<!-- Explanation under the ignore muted/blocked senders switch. -->
	<key>IGNORE_DND_SENDERS_EXPLANATION</key>
	<string>If you mute or block someone, TypeStatus won’t show any alerts from them.</string>
</dict>
</plist>
